;TESTO MOV,SUB,POP,JZ,J,POP,PUSH,HALT
; somma dei primi n numeri interi 

main :
    MOV r0, 1
    MOV r1, 1
    MOV r2, 0       ;accumulatore 
    MOV r3, 11      ;quanti numeri devo stampare (dove mi fermo)
loop : 
    ;calccolo della condizione e push nello stack
    SUB r1, r3
    JZ exit_while
    ADD r1, r2 
    POP r2
    ADD r1, r0
    POP r1
    J loop

exit_while : 
    PRINT r2
    HALT